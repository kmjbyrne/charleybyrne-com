{
    "name": "@charleybyrne/site",
    "version": "0.0.1",
    "main": "index.js",
    "files": [
        "./",
        "types/*.d.ts"
    ],
    "scripts": {
        "build": "npm run format:check && nuxt build",
        "dev": "nuxt",
        "format:check": "prettier -c .",
        "format": "prettier -w .",
        "generate": "nuxt generate",
        "lint": "npm run lint:js && npm run lint:style",
        "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
        "lint:style": "stylelint \"**/*.{vue,css}\" --ignore-path .gitignore",
        "start": "nuxt start",
        "start:frontend": "nuxt --config-file ./frontend/nuxt.config.js",
        "test": "jest"
    },
    "prettier": {
        "printWidth": 160,
        "semi": true,
        "tabWidth": 4,
        "singleQuote": false,
        "overrides": [
            {
                "files": "*.md",
                "options": {
                    "printWidth": 80,
                    "tabWidth": 2,
                    "proseWrap": "always"
                }
            },
            {
                "files": "*.*css",
                "options": {
                    "printWidth": 120,
                    "proseWrap": "always",
                    "tabWidth": 4
                }
            },
            {
                "files": "*.vue",
                "options": {
                    "printWidth": 180,
                    "proseWrap": "always",
                    "tabWidth": 4
                }
            }
        ]
    },
    "dependencies": {
        "@nuxt/content": "^1.15.1",
        "@nuxt/markdown": "0.0.21",
        "@nuxtjs/axios": "^5.13.6",
        "@nuxtjs/pwa": "^3.3.5",
        "@types/vue-markdown": "^2.2.1",
        "core-js": "^3.19.3",
        "nuxt": "^2.15.7",
        "vue": "^2.6.14",
        "vue-markdown": "^2.2.4",
        "vue-server-renderer": "^2.6.14",
        "vue-template-compiler": "^2.6.14",
        "webpack": "^4.45.0"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.17.0",
        "@babel/preset-react": "^7.16.7",
        "@nuxt/content-theme-docs": "^0.11.1",
        "@nuxt/types": "^2.15.8",
        "@nuxt/typescript-build": "^2.1.0",
        "@nuxtjs/auth-next": "^5.0.0-1643791578.532b3d6",
        "@nuxtjs/eslint-config-typescript": "^9.0.0",
        "@nuxtjs/eslint-module": "^3.0.2",
        "@nuxtjs/stylelint-module": "^4.0.0",
        "@snapatoms/ui": "^0.0.2-4",
        "@types/marked": "^4.0.2",
        "@types/uuid": "^8.3.4",
        "@vue/test-utils": "^1.3.0",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "^27.4.4",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^27.4.4",
        "postcss-html": "^1.3.0",
        "prettier": "^2.6.2",
        "prism-themes": "^1.9.0",
        "remark-prettier": "^1.3.0",
        "sass": "^1.49.9",
        "sass-loader": "^10.1.1",
        "stylelint-config-standard-vue": "^1.0.0",
        "stylelint-scss": "^4.2.0",
        "ts-jest": "^27.1.1",
        "typescript": "^4.7.3",
        "vue-jest": "^3.0.4"
    },
    "publishConfig": {
        "access": "public"
    }
}
